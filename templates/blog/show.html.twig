{% extends 'base.html.twig'%}
{% form_theme commentaireForm 'bootstrap_4_layout.html.twig' %}

{% block body %}
<section class="article">
<article>
    <h2>{{ article.title}}</h2>
    <div class="metadata">Ecrit le 10/09/2020 Ã  19h00 dans le categorie Politique</div>
    <div class="content">
        <img src="{{ article.image}}" alt="">
      {{ article.content | raw}}
    </div>
</article>
<hr>
 <section id="commentaire">
<h1>{{ article.content | length }} Commentaires:</h1> 
{% for comment in article.content %}
<div class="commentaire">
<div class="row">
    <div class="col-3">
     {{ comment.email }} (<small>{{ comment.createdAt| date('d/m/y') }})
     </div>
       <div class="col">
        {{comment.content | raw }}
        </div>
  </div>
</div>
{% endfor %} 
</section>

{{ form_start(commentaireForm) }}
{{form_row(commentaireForm.email)}}
{# {{form_row(commentaireForm.pseudo)}} #}
{{form_row(commentaireForm.contenu)}}
{{form_row(commentaireForm.rgpd)}}
<button type ="submit" class="btn btn-success">
Envoyer
 </button>
{{ form_end(commentaireForm) }}

{% endblock body %}
   
 
