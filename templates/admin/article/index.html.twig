        </thead>

        <tbody>

            {% for article in articles %}
            {# {{dump(article.ArticleUsers.id.email)}} #}
            
            <tr>
                <td>{{article.id}}</td>
                <td>{{article.title}}</td>
                <td>
                    {# <img src="{{article.user.avatar}}" alt="Avatar de {{article.user.username}}" class="avatar avatar-micro mr-2">
                    {{article.user.username}} #}
                    
                </td>
                <td class="text-center">
                    <span class="badge badge-primary rounded">{{article.createdAt | date("m/d/Y", "Europe/Paris")}}</span>
                </td>
                {# <td class="text-center">
                    <span class="badge badge-primary rounded">{{ad.avgRatings | number_format(1, ',', ' ')}}</span>
                </td> #}
                <td>
                    <a href="{{ path('admin_article_edit', { 'id': article.id}) }}" class="btn btn-primary"> <i class="fas fa-edit"> </i></a>
                    <a href="{{ path('admin_article_delete',{'id': article.id})}}" class="btn btn-danger"> <i class="fas fa-trash"> </i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

