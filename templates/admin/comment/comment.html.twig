{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires!{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des commentaire</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                
                <th class="text-center">Commentaire</th>
                <th class="text-center">Article lié</th>
                <th class="text-center">Date de création</th>
                {# <th class="text-center">Note</th>
                <th>Actions</th> #}
            </tr>
        </thead>

        <tbody>

            {% for comment in comments %}
            {# {{dump(article.ArticleUsers.id.email)}} #}
            
            <tr>
                <td>{{comment.id}}</td>
                <td>{{comment.email}}</td>
                {# <td>
                    {# <img src="{{article.user.avatar}}" alt="Avatar de {{article.user.username}}" class="avatar avatar-micro mr-2">
                    {{article.user.username}} #}
                    
                <td class="text-center">
                    <span>{{comment.contenu }}</span>
                </td>
                <td class="text-center">
                    <span>{{comment.article.title}}</span>
                </td>
                <td class="text-center">
                    <span class="badge badge-primary rounded">{{comment.createdAt | date("m/d/Y", "Europe/Paris")}}</span>
                </td>
                {# <td class="text-center">
                    <span class="badge badge-primary rounded">{{ad.avgRatings | number_format(1, ',', ' ')}}</span>
                </td> #}
                <td>
                    <a href="{{ path('admin_comment_edit', {'id': comment.id})}}" class="btn btn-primary"> <i class="fas fa-edit"> </i></a>
                    <a href="#" class="btn btn-danger"> <i class="fas fa-trash"> </i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {# {{ pagination.render()}} #}
    {# {% include 'admin/partials/pagination.html.twig' with {'route':'admin_ads_index'} %} #}
</div>
{% endblock %}